
//brute force
class Solution {
    public List<String> letterCasePermutation(String s) {
        List<String> result = new ArrayList<>();
        backtrack(result, s.toCharArray(), 0);
        return result;
    }

    private void backtrack(List<String> result, char[] arr, int index) {
        if (index == arr.length) {
            result.add(new String(arr));
            return;
        }

        if (Character.isLetter(arr[index])) {
            // Lowercase branch
            arr[index] = Character.toLowerCase(arr[index]);
            backtrack(result, arr, index + 1);

            // Uppercase branch
            arr[index] = Character.toUpperCase(arr[index]);
            backtrack(result, arr, index + 1);
        } else {
            // If it's a digit, just continue
            backtrack(result, arr, index + 1);
        }
    }
}


// optimal 



class Solution {
    public List<String> letterCasePermutation(String s) {
        int n=s.length();
        List<String>result=new ArrayList<>();
        result.add("");
        for(int i=0;i<n;i++){
            char c=s.charAt(i);
            List<String>temp=new ArrayList<>();
             for (int j = 0; j < result.size(); j++) {
                String str = result.get(j);

                if (Character.isLetter(c)) {
                    temp.add(str + Character.toLowerCase(c));
                    temp.add(str + Character.toUpperCase(c));
                } else {
                    temp.add(str + c);
                }
            }
            result=temp;
        }
        return result;
        
    }
}